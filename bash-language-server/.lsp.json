{
  "bash": {
    "command": "bash-language-server",
    "args": ["start"],
    "extensionToLanguage": {
      ".sh": "shellscript",
      ".bash": "shellscript",
      ".zsh": "shellscript",
      ".ksh": "shellscript"
    },
    "loggingConfig": {
      "env": {
        "BASH_IDE_LOG_LEVEL": "debug"
      }
    }
  }
}
